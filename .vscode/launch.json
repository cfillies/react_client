    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:3011",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "json",
            "request": "attach",
            "name": "Attach to Bot",
            "debugServer": 4712
        },
        {
            "type": "json",
            "request": "launch",
            "name": "Debug Bot (.NET Core)",
            "command": "dotnet",
            "args": [
                "run",
                "--no-build",
                "--",
                "--debugport",
                "0"
            ]
        }
    ]
}